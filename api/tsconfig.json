{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "moduleResolution": "node16",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    /* Completeness */
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}